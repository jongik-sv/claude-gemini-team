# Claude-Gemini Team Environment Configuration
# Copy this file to .env and update with your values

# ====================================
# API Configuration (Optional)
# ====================================

# Claude Configuration (Local CLI Preferred)
# CLAUDE_CLI_PATH=claude                    # Path to local Claude CLI
# CLAUDE_API_KEY=your_claude_api_key_here   # Fallback to API if CLI not available
# CLAUDE_API_URL=https://api.anthropic.com/v1/messages

# Gemini Configuration (Local CLI Preferred)  
# GEMINI_CLI_PATH=gemini                    # Path to local Gemini CLI
# GEMINI_API_KEY=your_gemini_api_key_here   # Fallback to API if CLI not available
# GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models

# ====================================
# Server Configuration
# ====================================

# Web Dashboard Server
WEB_DASHBOARD_PORT=8080
WEB_DASHBOARD_HOST=localhost

# WebSocket Configuration
WEBSOCKET_HEARTBEAT_INTERVAL=30000
WEBSOCKET_MAX_CONNECTIONS=100

# ====================================
# Team Configuration
# ====================================

# Team Management
TEAM_MAX_SIZE=10
TEAM_DEFAULT_TIMEOUT=30000
TEAM_RETRY_ATTEMPTS=3

# Communication
COMMUNICATION_MODE=async
COMMUNICATION_HEARTBEAT_INTERVAL=30000

# ====================================
# Visualization Configuration
# ====================================

# Dashboard Settings
DASHBOARD_REFRESH_INTERVAL=2000
DASHBOARD_MAX_LOG_HISTORY=1000
DASHBOARD_ENABLE_COLORS=true

# Log Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/team-system.log

# ====================================
# Redis Configuration (Optional)
# ====================================

# Redis Connection (for distributed state management)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
# REDIS_DB=0

# ====================================
# MCP Tools Configuration
# ====================================

# Yahoo Finance MCP
# YAHOO_FINANCE_MCP_ENDPOINT=yahoo-finance://localhost:8080

# Alpha Vantage MCP
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
# ALPHA_VANTAGE_MCP_ENDPOINT=alpha-vantage://localhost:8081

# Supabase MCP
# SUPABASE_URL=your_supabase_url
# SUPABASE_ANON_KEY=your_supabase_anon_key
# SUPABASE_MCP_ENDPOINT=supabase://localhost:8082

# Exa Search MCP
# EXA_API_KEY=your_exa_api_key
# EXA_MCP_ENDPOINT=exa://localhost:8083

# ====================================
# Development Configuration
# ====================================

# Development Mode
NODE_ENV=development

# Debug Configuration
# DEBUG=team-manager,workflow-engine,message-broker

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=false
PERFORMANCE_LOG_INTERVAL=60000

# ====================================
# Security Configuration
# ====================================

# CORS Configuration
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ====================================
# Testing Configuration
# ====================================

# Test Environment
TEST_TIMEOUT=30000
TEST_RETRY_ATTEMPTS=3

# Coverage Configuration
COVERAGE_THRESHOLD=80